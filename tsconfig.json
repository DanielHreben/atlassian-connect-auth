{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["jest-matcher-specific-error", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src"]
}
